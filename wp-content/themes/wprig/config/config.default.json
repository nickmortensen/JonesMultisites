{
  "theme": {
    "slug": "wp-rig",
    "name": "WP Rig",
    "author": "The WP Rig Contributors",
    "PHPNamespace": "WP_Rig\\WP_Rig"
  },
  "dev": {
    "browserSync": {
      "live": true,
      "proxyURL": "wprig.test:8888",
      "bypassPort": "8181",
      "https": false
    },
    "styles": {
      "stage": 0,
      "autoprefixer": {
        "grid": false
      },
	  "importFrom": [
		"_custom-media.css",
		"_custom-selectors.css"
	  ],
	  "features": {
		"custom-selectors": true,
		"custom-media-queries": false,
		"custom-properties": false,
		"nesting-rules": true
	  }
    },
    "debug": {
      "styles": false,
      "scripts": true,
      "phpcs": true
    }
  },
  "export": {
    "compress": true,
    "generatePotFile": true,
    "filesToCopy": [
      "LICENSE",
      "readme.txt",
      "screenshot.png"
    ]
  }
}
